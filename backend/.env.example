# Railbookers Rail Vacation Planner - Environment Configuration
# Copy this file to .env and update values for your environment.

# Application
APP_NAME=Railbookers Rail Vacation Planner
APP_VERSION=2.0.0
ENVIRONMENT=production
DEBUG=false

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rail_planner
DATABASE_POOL_SIZE=25
DATABASE_MAX_OVERFLOW=50
DATABASE_POOL_RECYCLE=1800
DATABASE_POOL_PRE_PING=true

# API
API_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8890
API_WORKERS=4

# Logging
LOG_LEVEL=INFO

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8890"]

# Session management
SESSION_TTL_MINUTES=30
MAX_CONCURRENT_SESSIONS=10000

# Admin API key (for protected endpoints like /rag/build)
# IMPORTANT: Change this to a strong, unique key in production
ADMIN_API_KEY=CHANGE-ME-TO-A-STRONG-KEY

# RAG Configuration
RAG_MAX_TOKENS=2048
RAG_RETRIEVAL_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
